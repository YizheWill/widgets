<p id="notice"><%= notice %></p>

<h1>tweets</h1>
<% if current_user %>
  <p>logged in as <%= current_user.username %></p>
  <table>
    <thead>
      <tr>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td>
            <% if post.user == current_user %>
              tweet by you
            <% else %>
              tweet by <%= post.user.username %>
          <% end %>
          </td>
          <td><%= link_to 'Show', post %></td>
          <% if current_user == post.user %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post', new_post_path %>
  <p><%= link_to 'Home', root_url %></p>
  <p><%= link_to 'switch account', logout_path %></p>
<% else %>
  <p>You have to first <%= link_to 'signup', signup_path %> or <%= link_to 'login', login_path %> to read the tweets</p>
<% end %>
